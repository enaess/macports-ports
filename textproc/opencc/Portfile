if {${os.platform} ne "darwin" || ${os.major} >= 21} {
    configure.args-append -DPYTHON_EXECUTABLE=/usr/bin/python3
} else {
    configure.args-append -DPYTHON_EXECUTABLE=/usr/bin/python
